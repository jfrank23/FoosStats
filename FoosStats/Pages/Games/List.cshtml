@page
@model FoosStats.Pages.Games.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Game List</h1>
<div>
    <a asp-page="./EditGame" class="btn btn-outline-primary">Add New</a>
</div>

<table class="table table-striped" id="games" style="display:none">
    <thead class="table-head">
        <tr class="font-weight-bold">
            <td>Number</td>
            <td>Game</td>
            <td>Blue Defense</td>
            <td>Blue Offense</td>
            <td>Blue Score</td>
            <td>Red Score</td>
            <td>Red Offense</td>
            <td>Red Defense</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @{var count = Model.games.Count(); }
        @foreach (var game in Model.games)
        {
            <tr>
                <td>@count</td>
                <td>@game.GameTime</td>
                <td><a href="../../Players/Detail/@game.BlueDefense">@game.BlueDefenseName</a></td>
                <td><a href="../../Players/Detail/@game.BlueOffense">@game.BlueOffenseName</a></td>
                <td>@game.BlueScore</td>
                <td>@game.RedScore</td>
                <td><a href="../../Players/Detail/@game.RedOffense">@game.RedOffenseName</a></td>
                <td><a href="../../Players/Detail/@game.RedDefense">@game.RedDefenseName</a></td>
                <td>
                    <a class="btn btn-lg" asp-page="./EditGame" asp-route-gameID="@game.GameID">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-lg" asp-page="./DeleteGame" asp-route-gameID="@game.GameID">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
            count -= 1;
        }
    </tbody>
</table>

@section scripts{<script>
    $(document).ready(function() {
        $('#games').DataTable({ "order": [[0, "desc"]] });
        $('#games').show();
} );
</script>
}




